; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 8

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2
insert_final_newline = false

[*.php]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 4

root = true